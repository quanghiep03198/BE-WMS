{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",

	"compilerOptions": {
		"assets": [
			{
				"include": "i18n/**/*",
				"watchAssets": true
			},
			{
				"include": "modules/**/sql/*.sql",
				"watchAssets": true
			}
		],
		"deleteOutDir": true,
		"builder": "swc",
		"typeCheck": true,
		"tsConfigPath": "tsconfig.build.json"
	}
}
